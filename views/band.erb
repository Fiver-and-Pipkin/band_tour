<div class="jumbotron">

<h1><%= @band.band_name.titleize() %></h1>
<h5>Your Rating <%= @band.rating %></h5>
</div>

<div class="jumbotron">

<form action="/band/<%= @band.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="band_name">Edit the Band name:</label>
  <input id="band_name" name="band_name" type="text">
  <label for="rating">Change your rating:</label>
  <input id="rating" name="rating" type="text">

  <button type="submit">Update</button>
</form>

<form action="/band/<%= @band.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Band</button>
</form>

<a href="/">Go back to home</a>
</div>
